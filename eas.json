{
    "cli": {
      "version": ">= 12.0.0"
    },
    "build": {
      "development": {
        "developmentClient": true,
        "distribution": "internal",
        "env": {
          "APP_ENV": "development"
        }
      },
      "preview": {
        "distribution": "internal",
        "android": {
          "buildType": "apk"
        },
        "env": {
          "APP_ENV": "preview"
        }
      },
      "production": {
        "android": {
          "buildType": "app-bundle"
        },
        "env": {
          "APP_ENV": "production"
        }
      }
    },
    "submit": {
      "production": {
        "android": {
          "serviceAccountKeyPath": "./google-services.json",
          "track": "internal"
        },
        "ios": {
          "appleId": "your-apple-id@email.com",
          "ascAppId": "your-asc-app-id",
          "appleTeamId": "your-team-id"
        }
      }
    }
  }